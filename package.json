{
  "name": "avishek-web-push-tester",
  "version": "1.0.0",
  "description": "A sleek Mac widget for testing web push notification tokens",
  "main": "dist-electron/main.js",
  "author": "Avishek Chatterjee",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && npm run electron:build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "electron-builder",
    "dist": "npm run build"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "web-push": "^3.6.7",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.avishek.webpushtester",
    "productName": "Avishek Web Push Tester",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "title": "Avishek Web Push Tester",
      "icon": "build/icon.png"
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ]
  }
}
